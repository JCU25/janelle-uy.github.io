---
import Layout from "../layouts/Layout.astro";
import { ArrowRightIcon } from "@heroicons/react/20/solid";
import ProjectTabs from "../components/ProjectTabs.tsx";

const TechList = [
    "devicon_typescript.svg",
    "logos_javascript.svg",
    "logos_nodejs.svg",
    "logos_express.svg",
    "logos_python.svg",
    "devicon_spring-wordmark.svg",
    "logos_flutter.svg",
    "devicon_dart-wordmark.svg",
    "devicon_java-wordmark.svg",
    "logos_git.svg",
    "logos_mysql.svg",
    "logos_mongodb.svg",
    "logos_figma.svg",
    "logos_astro.svg",
    "devicon_react-wordmark.svg",
    "logos_tailwindcss.svg",
    "logos_headlessui.svg",
    "devicon_bootstrap-wordmark.svg",
    "logos_storyblok.svg",
];
---

<Layout title="Janelle Uy">
    <section
        class="py-16 md:py-0 disable-select bg-dark-black flex flex-col justify-center justify-center gap-16 text-light-gray px-4"
    >
        <div class="flex justify-center flex-col gap-3">
            <h1 class="noselect text-center text-2xl font-bold block">
                Hi! I'm - <br />
                <span
                    class="inline-block text-magenta text-6xl md:text-7xl pb-4 border-b-8 p-0"
                >
                    Janelle Uy.
                </span>
            </h1>
            <h2 class="text-center text-2xl md:text-3xl font-bold">
                A software developer.
            </h2>
        </div>

        <p
            class="hero-text text-center md:text-lg md:w-3/4 md:w-1/2 self-center"
        >
            If you need websites, applications or scripts to be developed or
            something you need help with, reach out to me!
        </p>

        <div
            class="inline-flex flex flex-row self-center font-bold text-white md:text-xl gap-6"
        >
            <a
                type="button"
                class="gradient-border-container"
                href="mailto:janellecc.uy@gmail.com"
            >
                <span class="gradient-border-text">Contact Me</span>
                <span class="gradient-border-border"></span>
            </a>

            <a
                href="#projects"
                type="button"
                class="browse-btn-container rounded pulse"
            >
                <span
                    class="browse-btn flex flex-row gap-1 justify-center items-center bg-dark-black px-3 rounded-lg"
                >
                    Browse projects
                    <span aria-hidden="true">
                        <ArrowRightIcon className="w-7" />
                    </span>
                </span>
            </a>
        </div>

        <div class="flex-row inline-flex gap-4 justify-center">
            <a target="_blank" href="https://github.com/JCU25">
                <img
                    class="w-8 h-8 hover:scale-110 transition-all duration-100"
                    src="/assets/github-white-icon.svg"
                    alt="GitHub"
                />
            </a>

            <a
                target="_blank"
                href="https://www.linkedin.com/in/janelle-cassandra-uy"
                ><img
                    class="w-8 h-8 hover:scale-110 transition-all duration-100"
                    src="/assets/linkedin-white-icon.svg"
                    alt="LinkedIn"
                /></a
            >

            <a class="flex" target="_blank" href="mailto:janellecc.uy@gmail.com"
                ><img
                    class="self-center w-8 h-8 hover:scale-110 transition-all duration-100"
                    src="/assets/mail-white-icon.svg"
                    alt="Mail"
                />
            </a>
        </div>
    </section>

    <section
        id="projects"
        class="disable-select text-light-gray bg-pure-black bg-opacity-90 pt-16 pb-16 md:px-16 flex flex-col gap-4"
    >
        <h2
            class="text-center text-off-white text-4xl md:text-5xl font-semibold"
        >
            <span class="inline-block border-b-4 border-magenta"
                >MY PROJECTS</span
            >
        </h2>

        <ProjectTabs client:load />
    </section>

    <section
        class="disable-select text-light-gray bg-dark-black flex flex-col justify-center gap-16 md:gap-28 py-28 md:py-32"
    >
        <di class="flex flex-col gap-7">
            <h2
                class="text-off-white font-bold text-4xl md:text-5xl text-center"
            >
                What I Use
            </h2>
            <p class="text-light-gray text-center text-sm md:text-base">
                These are the languages, frameworks, and tools that I use:
            </p>
        </di>

        <div
            class="scroller hover:bg-white/65 cursor-pointer hover:bg-opacity-90 h-32 md:h-64 bg-white/50 bg-opacity-80 px-2 md:px-16 overflow-x-auto flex items-center"
        >
            <ul
                class="scroller_inner h-full flex flex-wrap items-center gap-8 md:gap-16"
            >
                {
                    TechList.map((tech) => {
                        return (
                            <li>
                                <img
                                    class="h-12 max-w-36 md:h-20 m-auto "
                                    src={`/assets/tech-list/${tech}`}
                                    alt={tech
                                        .split("_")[1]
                                        .replace(".svg", "")
                                        .replace("-", "")}
                                />
                            </li>
                        );
                    })
                }
            </ul>
        </div>

        <script>
            const scrollers = document.querySelectorAll(".scroller");

            if (
                !window.matchMedia("(prefers-reduced-motion: reduce)").matches
            ) {
                addAnimation();
            }

            function addAnimation() {
                scrollers.forEach((element) => {
                    element.setAttribute("data-animated", "true");

                    const scrollerInner =
                        document.querySelector(".scroller_inner");
                    const scrollerContent = Array.from(scrollerInner!.children);

                    scrollerContent.forEach((item) => {
                        let duplicate = item.cloneNode(true) as HTMLElement;
                        duplicate.setAttribute("aria-hidden", "true");
                        scrollerInner?.appendChild(duplicate);
                    });
                });
            }
        </script>
    </section>

    <style>
        section {
            width: 100%;
            min-height: 90vh;
        }

        .hero-text {
            max-width: 750px;
        }

        .scroller[data-animated="true"] {
            min-height: 200px;
            max-height: 360px;
            overflow-x: hidden;
        }

        .scroller[data-animated="true"] .scroller_inner {
            display: flex;
            flex-wrap: nowrap;
            animation: scroll 40s linear infinite;
        }

        .scroller[data-animated="true"] .scroller_inner:hover {
            animation-play-state: paused;
        }

        .gradient-border-container {
            position: relative;
        }
        .gradient-border-text {
            position: relative;
            z-index: 2;
            margin: 2px;
            padding: 0.25em 1em;
            display: flex;
            justify-items: center;
            align-items: center;
            border-radius: 0.5rem;
            border: none;
            background-color: #101010;
            transition: all 0.2s ease-in-out;
        }
        .gradient-border-border {
            position: absolute;
            z-index: 1;
            background: radial-gradient(#bb37dc, #bb37dc, #f0a0a0);
            left: 0px;
            top: 0px;
            height: 100%;
            width: 100%;
            border-radius: 0.5rem;
        }
        .gradient-border-container:hover .gradient-border-text {
            background-color: transparent;
        }

        .gradient-border:hover {
            z-index: 0;
        }

        .browse-btn-container {
            background: linear-gradient(to right, #a32bc1, #dc8989);
            padding: 0;
            animation: bounce-shock 2.5s infinite;
        }

        @keyframes bounce-shock {
            0% {
                transform: translateY(0);
            }
            15% {
                transform: translateY(-10px);
            }
            25% {
                transform: translateY(0);
            }

            40% {
                transform: translateY(-10px);
            }
            50% {
                transform: translateY(0);
            }

            65% {
                transform: translateY(-4px);
            }

            72% {
                transform: translateY(0);
            }

            79% {
                transform: translateY(0);
            }

            80% {
                transform: rotate(4deg);
            }
            82% {
                transform: rotate(-4deg);
            }

            86% {
                transform: rotate(4deg);
            }
            90% {
                transform: rotate(-4deg);
            }

            94% {
                transform: rotate(4deg);
            }
        }

        .browse-btn {
            width: 100%;
            height: 100%;

            transition: background 0.2s ease-in-out;
        }
        .browse-btn-container:hover .browse-btn {
            background: transparent;
        }

        @keyframes scroll {
            to {
                transform: translateX(
                    calc(-50% - 1rem)
                ); /* Start at original position */
            }
        }
        @media (min-width: 768px) {
            @keyframes scroll {
                to {
                    transform: translateX(
                        calc(-50% - 2rem)
                    ); /* Start at original position */
                }
            }
        }
    </style>
</Layout>
