---
import Layout from "../layouts/Layout.astro";
import { ArrowRightIcon } from "@heroicons/react/20/solid";

const TechList = [
    "devicon_typescript.svg",
    "logos_javascript.svg",
    "logos_nodejs.svg",
    "logos_express.svg",
    "logos_python.svg",
    "devicon_spring-wordmark.svg",
    "logos_flutter.svg",
    "devicon_dart-wordmark.svg",
    "devicon_java-wordmark.svg",
    "logos_git.svg",
    "logos_mysql.svg",
    "logos_mongodb.svg",
    "logos_figma.svg",
    "logos_astro.svg",
    "devicon_react-wordmark.svg",
    "logos_tailwindcss.svg",
    "logos_headlessui.svg",
    "devicon_bootstrap-wordmark.svg",
    "logos_storyblok.svg",
];
---

<Layout title="Janelle Uy">
    <section
        class="bg-dark-black flex flex-col justify-center justify-center gap-16 text-light-gray px-4"
    >
        <div class="flex justify-center flex-col gap-3">
            <h1 class="text-center text-3xl font-bold block">
                Hi! I'm - <br />
                <span
                    class="inline-block text-magenta text-6xl sm:text-8xl pb-4 border-b-8 p-0"
                >
                    Janelle Uy.
                </span>
            </h1>
            <h2 class="text-center text-2xl sm:text-3xl font-bold">
                A software developer.
            </h2>
        </div>

        <p
            class="hero-text text-center md:text-xl sm:w-3/4 md:w-1/2 self-center"
        >
            If you need websites, applications or scripts to be developed or
            something you need help with, reach out to me!
        </p>

        <div class="inline-flex self-center font-bold text-off-white">
            <a href="#contact-me" class="px-5 py-1"> Contact me </a>

            <button
                class="inline-flex items-center gap-3 px-5 py-1 justify-center"
            >
                Browse projects
                <span aria-hidden="true">
                    <ArrowRightIcon className="w-7" />
                </span>
            </button>
        </div>

        <div class="flex-row inline-flex gap-3 justify-center">
            <a href="https://github.com/JCU25">
                <img
                    class="w-8 h-8"
                    src="/assets/github-vector.svg"
                    alt="GitHub"
                />
            </a>

            <a href="https://www.linkedin.com/in/janelle-cassandra-uy"
                ><img
                    class="w-8 h-8"
                    src="/assets/linkedin-vector.svg"
                    alt=""
                /></a
            >

            <a class="flex" href="mailto:janellecc.uy@gmail.com"
                ><img
                    class="self-center w-8 h-8"
                    src="/assets/mail-icon-vector.svg"
                    alt=""
                />
            </a>
        </div>
    </section>

    <section
        class="h-screen text-light-gray bg-pure-black bg-opacity-80 py-28 px-4 md:px-28 md:py-32"
    >
        <h2
            class="text-center text-off-white text-4xl md:text-5xl font-semibold"
        >
            <span class="inline border-b-4 border-magenta">MY PROJECTS</span>
        </h2>
    </section>

    <section
        class="text-light-gray bg-black flex flex-col gap-16 md:gap-28 py-28 md:py-32"
    >
        <di class="flex flex-col gap-7">
            <h2
                class="text-off-white font-bold text-4xl md:text-5xl text-center"
            >
                What I Use
            </h2>
            <p class="text-light-gray text-center text-sm md:text-base">
                These are the languages, frameworks, and tools that I use:
            </p>
        </di>

        <div
            class="scroller bg-white bg-opacity-80 px-2 py-8 md:px-16 md:py-20"
        >
            <ul class="scroller_inner flex flex-wrap gap-6 md:gap-16">
                {
                    TechList.map((tech) => {
                        return (
                            <li>
                                <img
                                    class="h-10 max-w-36 md:h-28 m-auto flex-shrink-0"
                                    src={`/assets/tech-list/${tech}`}
                                    alt={tech
                                        .split("_")[1]
                                        .replace(".svg", "")
                                        .replace("-", "")}
                                />
                            </li>
                        );
                    })
                }
            </ul>
        </div>
    </section>

    <style>
        section {
            width: 100%;
            min-height: 90vh;
        }

        .hero-text {
            max-width: 750px;
        }

        .scroller {
        }

        .scroller_inner {
        }
    </style>
</Layout>
